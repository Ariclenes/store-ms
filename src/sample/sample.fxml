                    </ToggleButton>
                    <ToggleButton toggleGroup="$sideTg" contentDisplay="GRAPHIC_ONLY" prefWidth="${btnVb.width}" fx:id="btnSettings" onAction="#changeScene"  text="RREGULLO">
