<BorderPane style="-fx-background-color: transparent" fx:id="root" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" >

    <fx:define>
        <ToggleGroup fx:id="sideTg"/>
    </fx:define>

    <left>
        <BorderPane styleClass="sideBar">
            <center>
                <VBox fx:id="btnVb">
                    <ToggleButton selected="true" contentDisplay="GRAPHIC_ONLY" toggleGroup="$sideTg" prefWidth="${btnVb.width}" fx:id="btnHome" text="SHTEPI" onAction="#changeScene">
                        <graphic>
                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/home.png"/>
                            </ImageView>
                        </graphic>
                    </ToggleButton>
                    <ToggleButton toggleGroup="$sideTg" contentDisplay="GRAPHIC_ONLY" prefWidth="${btnVb.width}" fx:id="btnPunetoret" text="PUNETORET" onAction="#changeScene">
                        <graphic>
                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/user.png"/>
                            </ImageView>
