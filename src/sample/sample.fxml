                    </ToggleButton>
                    <ToggleButton toggleGroup="$sideTg" contentDisplay="GRAPHIC_ONLY" prefWidth="${btnVb.width}" fx:id="btnKons" text="KONSUMATORET" onAction="#changeScene">
                        <graphic>
                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/user.png"/>
                            </ImageView>
                        </graphic>
                    </ToggleButton>
                    <ToggleButton toggleGroup="$sideTg" contentDisplay="GRAPHIC_ONLY" prefWidth="${btnVb.width}" fx:id="btnPaisjet" text="PRODUKTET" onAction="#changeScene">
                        <graphic>
                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/tool.png"/>
                            </ImageView>
                        </graphic>
                    </ToggleButton>
                    <ToggleButton toggleGroup="$sideTg" contentDisplay="GRAPHIC_ONLY" prefWidth="${btnVb.width}" fx:id="btnStat" text="RAPORTET" onAction="#changeScene">
                        <graphic>
                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/graph.png"/>
                            </ImageView>
                        </graphic>
                    </ToggleButton>
                    <ToggleButton toggleGroup="$sideTg" contentDisplay="GRAPHIC_ONLY" prefWidth="${btnVb.width}" fx:id="btnShit" text="SHITJE" onAction="#changeScene">
                        <graphic>
                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/shitje.png"/>
