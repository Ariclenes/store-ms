                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/setting.png"/>
                            </ImageView>
                        </graphic>
                    </ToggleButton>
                    <ToggleButton onAction="#exit" toggleGroup="$sideTg" contentDisplay="GRAPHIC_ONLY" prefWidth="${btnVb.width}" fx:id="btnLogout" text="DIL">
                        <graphic>
                            <ImageView preserveRatio="true" fitWidth="24">
                                <Image url="/sample/photo/power.png"/>
                            </ImageView>
                        </graphic>
                    </ToggleButton>
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" style="-fx-background-color: -fx-secondary">
                    <padding>
                        <Insets bottom="15" top="15"/>
                    </padding>
                    <ImageView fx:id="spinner" preserveRatio="true">
                        <Image url="/sample/photo/doneSpinning.png"/>
                    </ImageView>
                </HBox>
            </bottom>
        </BorderPane>
    </left>

</BorderPane>
