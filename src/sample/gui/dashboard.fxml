<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane fx:id="grid" styleClass="gp" vgap="7" hgap="7" fx:controller="sample.controller.Dashboard" xmlns:fx="http://javafx.com/fxml">
    <HBox spacing="7" minHeight="170" maxHeight="170" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" alignment="CENTER_LEFT">

        <fx:define>
            <ToggleGroup fx:id="tg"/>
        </fx:define>

        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" styleClass="shadow">
            <padding>
                <Insets right="15"/>
            </padding>
            <StackPane maxWidth="180" minWidth="180">
                <PieChart fx:id="pie1" rotate="-90" legendVisible="false" labelsVisible="false"/>
                <Circle styleClass="circle" radius="60"/>
                <Label fx:id="lPie1" styleClass="chart-nr, color"/>
            </StackPane>
            <VBox alignment="CENTER_LEFT">
                <Label text="KETE MUAJ" styleClass="color" style="-fx-font-size: 16"/>
                <Label fx:id="lVleraHyratMuaj" styleClass="bigDec" />
                <Label fx:id="lVleraHyratMuajTarget" styleClass="bigDec, bigDec2"/>
            </VBox>
        </HBox>
        <HBox HBox.hgrow="ALWAYS" minHeight="170" maxHeight="170" alignment="CENTER_LEFT" styleClass="shadow">
            <padding>
                <Insets right="15"/>
            </padding>
            <StackPane maxWidth="180" minWidth="180">
                <PieChart fx:id="pie2" rotate="-90" legendVisible="false" labelsVisible="false"/>
                <Circle styleClass="circle" radius="60"/>
                <Label fx:id="lPie2" styleClass="chart-nr, color"/>
            </StackPane>
            <VBox alignment="CENTER_LEFT">
                <Label text="KETE JAVE" styleClass="color" style="-fx-font-size: 16"/>
                <Label fx:id="lVleraHyratJave" styleClass="bigDec" />
                <Label fx:id="lVleraHyratJaveTarget" styleClass="bigDec, bigDec2"/>
            </VBox>
        </HBox>
        <HBox HBox.hgrow="ALWAYS" minHeight="170" maxHeight="170" alignment="CENTER_LEFT" styleClass="shadow">
            <padding>
                <Insets right="15"/>
            </padding>
            <StackPane maxWidth="180" minWidth="180">
                <PieChart fx:id="pie3" rotate="-90" legendVisible="false" labelsVisible="false"/>
                <Circle styleClass="circle" radius="60"/>
                <Label fx:id="lPie3" styleClass="chart-nr, color"/>
            </StackPane>
            <VBox alignment="CENTER_LEFT">
                <Label text="SOT" styleClass="color" style="-fx-font-size: 16"/>
                <Label fx:id="lVleraHyratSot" styleClass="bigDec"/>
                <Label fx:id="lVleraHyratSotTarget" styleClass="bigDec, bigDec2"/>
            </VBox>
        </HBox>
    </HBox>

    <HBox  minWidth="550" prefHeight="150" minHeight="165" maxHeight="165" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="shadow">
        <BorderPane minWidth="550" >
            <top><Label text="Konsumatoret" styleClass="infoTtl" minWidth="550"/> </top>
            <left>
                <VBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 0 50">
                    <Label text="Konsumatore" styleClass="infoTtl" style="-fx-opacity: .8;-fx-border-width: 0"/>
                    <Label fx:id="lKons" styleClass="lVlera"/>
                </VBox>
            </left>
            <center>
                <VBox spacing="2" alignment="CENTER">
                    <Label text="Shitje" styleClass="infoTtl" style="-fx-opacity: .8; -fx-border-width: 0"/>
                    <Label fx:id="lShitje" styleClass="lVlera"/>
                </VBox>
            </center>
            <right>
                <VBox spacing="2" style="-fx-padding: 0 30 0 0" alignment="CENTER">
                    <Label text="P. Mesatare" styleClass="infoTtl" style="-fx-opacity: .8; -fx-border-width: 0"/>
                    <Label fx:id="lShitjeM" styleClass="lVlera"/>
                </VBox>
            </right>
        </BorderPane>
    </HBox>

    <HBox  minWidth="550" prefHeight="150" minHeight="165" maxHeight="165" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="shadow">
        <BorderPane minWidth="550"  maxHeight="165">
            <top>
                <Label text="Punetoret" graphicTextGap="20" styleClass="infoTtl" minWidth="550"/>
            </top>
            <left>
                <VBox spacing="2" alignment="CENTER">
                    <Label text="Total" styleClass="infoTtl" style="-fx-border-width: 0;-fx-opacity: .8; -fx-padding: 0 0 0 50"/>
                    <Label fx:id="lPnt" styleClass="lVlera"/>
                </VBox>
            </left>
            <center>
                <VBox spacing="2" alignment="CENTER">
                    <Label text="Aktiv" styleClass="infoTtl" style="-fx-opacity: .8;-fx-border-width: 0;"/>
                    <Label fx:id="lPntA" styleClass="lVlera"/>
                </VBox>
            </center>
            <right>
                <VBox spacing="2" alignment="CENTER">
                    <Label text="Pushim" styleClass="infoTtl" style="-fx-opacity: .8; -fx-padding: 0 50 0 0; -fx-border-width: 0;"/>
                    <Label fx:id="lPntP" text="0" styleClass="lVlera"/>
                </VBox>
            </right>
        </BorderPane>
    </HBox>

    <VBox fx:id="chartVb" minHeight="310" minWidth="1100" styleClass="chartVb, shadow"
          GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.rowSpan="1" GridPane.columnSpan="2" spacing="5">
        <HBox spacing="0" alignment="CENTER_RIGHT" style="-fx-padding: 6">
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                <ComboBox fx:id="cbChartTp" value="Dite">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Dite"/>
                            <String fx:value="Jave"/>
                            <String fx:value="Muaj"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <ToggleButton text="1 VIT" fx:id="hlViti" toggleGroup="$tg" style="-fx-border-radius: 20 0 0 20; -fx-background-radius: 20 0 0 20"/>
            <ToggleButton text="6 MUAJ" fx:id="hl6m" toggleGroup="$tg"/>
            <ToggleButton text="3 MUAJ" fx:id="hl3m" toggleGroup="$tg"/>
            <ToggleButton text="1 MUAJ" fx:id="hl1m" toggleGroup="$tg"/>
            <ToggleButton text="7 DITE" fx:id="hl7d" toggleGroup="$tg"/>
            <ToggleButton selected="true" text="SOT" fx:id="hlSot" toggleGroup="$tg" style="-fx-border-radius: 0 20 20 0; -fx-background-radius: 0 20 20 0"/>
        </HBox>
    </VBox>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

</GridPane>